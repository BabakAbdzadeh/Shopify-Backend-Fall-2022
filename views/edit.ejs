<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Edit page</title>
</head>

<body>

  <body>
    <h1> Edit Item </h1>


  <table>
    <tr>
      <th>Services:</th>
    </tr>
    <tr>
      <td>
        <button type="button" name="button">
          <a href="/">Add Item</a>
        </button>
      </td>
      <td>
        <button type="button" name="button">
          <a href="/search">Search</a>
        </button>
      </td>
      <td>
        <button type="button" name="button">
          <a href="/show">Show all items</a>
        </button>
      </td>

    </tr>
  </table>



  <table>



    <form action="/update" method="post">


      <tr>
        <!-- 1 -->
        <th>
          <h3>Product</h3>
        </th>
      </tr>
      <tr>
        <!-- 2 -->
        <th>Product</th>
        <td><%= item.product %></td>
        <td>

          <input type="text" name="product" placeholder="type of the product">
        </td>
      </tr>
      <tr>
        <!-- 3 -->
        <th>Brand</th>
        <td><%= item.brand %></td>
        <td>
          <input type="text" name="brand" placeholder="brand">
        </td>
      </tr>
      <tr>
        <!-- 4 -->
        <th>Model</th>
        <td><%= item.name %> </td>
        <td>
          <input type="text" name="name" placeholder="name or model">
        </td>
      </tr>
      <tr>
        <th>Quantity</th>
        <td><%= item.quantity %></td>
        <td>

          <input type="number" name="quantity" placeholder="quantity">
        </td>
        <!-- 5 -->

      </tr>
      <tr>
        <!-- 6 -->
        <th>
          <h3>Location</h3>
        </th>
      </tr>
      <tr>
        <!-- 7 -->
        <th>Floor</th>
        <td><%= item.floor %></td>
        <td>

          <input type="number" name="floor" placeholder="floor">
        </td>
      </tr>
      <tr>
        <!-- 8 -->
        <th>Shelf</th>
        <td><%= item.shelf %></td>
        <td>

          <input type="text" name="shelf" placeholder="shelf">
        </td>
      </tr>
      <tr>
        <!-- 9 -->
        <th>level</th>
        <td><%= item.level %></td>
        <td>

          <input type="Number" name="level" placeholder="level">
        </td>
      </tr>
      <tr>
        <!-- 10 -->
        <th>Barcode:</th>
        <td><%= item.barcode %></td>
        <td>

          <input type="number" name="barcode" placeholder="barcode">
        </td>
      </tr>
      <tr>
        <!-- 11 -->
        <td>

          <button type="submit">Edit</button>
        </td>
        <input type="hidden" name="id" value=<%= item._id%>>
        <td>
          <button type="button" name="button">
            <a href="/show">Cancel</a>
          </button>
        </td>
      </tr>
    </form>




  </table>
</body>

</html>
