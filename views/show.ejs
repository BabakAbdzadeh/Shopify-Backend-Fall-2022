<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>show page</title>
  </head>
  <body>
    <p>

      <table>
        <tr>
          <th>Product</th>
          <th>Brand</th>
          <th>Model</th>
          <th>Amount</th>
          <th>Modification</th>
        </tr>
        <tr>
          <% items.forEach(item => { %>
          <td><%= item.product %></td>
          <td><%= item.brand %></td>
          <td><%= item.model %> </td>
          <td><%= item.amount %></td>
          <td>
          <form action="/delete" method="post">
            <button type="submit" name="delete" value=<%=item._id%>>Delete</button>
          </form>
          <form action="/edit" method="get">
            <button type="submit" name="edit" value=<%=item._id%>>Edit</button>
          </form> </td>
        </tr>
        <% }); %>
      </table>


    </p>
  </body>
</html>
